<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="lazyLoadingEnabled" value="false"/>
        <setting name="cacheEnabled" value="false"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <typeAliases>
    </typeAliases>

    <typeHandlers>
        <typeHandler handler="com.ipro.survey.persistence.handler.CodeEnumTypeHandler"
                     javaType="com.ipro.survey.Enum.TaskStatus"/>
        <typeHandler handler="com.ipro.survey.persistence.handler.CodeEnumTypeHandler"
                     javaType="com.ipro.survey.Enum.ScheduleTimeLevel"/>
        <typeHandler handler="com.ipro.survey.persistence.handler.CodeEnumTypeHandler"
                     javaType="com.ipro.survey.Enum.ActionType"/>
        <typeHandler handler="com.ipro.survey.persistence.handler.CodeEnumTypeHandler"
                     javaType="com.ipro.survey.Enum.UserType"/>
    </typeHandlers>

</configuration>
